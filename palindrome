import time

def get_word():
	word = raw_input("Please enter a word and I will tell you if it is a palindrome: ")
	return word

def check_word(word):
	if word[::-1] == word:
		print "This is a palindrome"
	else:
		print "This is not a palindrome"
	return 0

word = get_word()

print "Please give me a moment while I check if this is a palindrome"

time.sleep(5)

check_word(word)
